<p style="color: green"><%= notice %></p>

<div id="users">
<div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block py-2 min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden shadow-md sm:rounded-lg">
<table class="min-w-full">
<thead class="text-white bg-gradient-to-b from-green-700 via-green-800 to-green-900 hover:bg-gradient-to-br">
<tr>
  <% @user_attributes.each do |attr| %>
  <th scope="col" class="py-3 px-6 text-sm font-medium tracking-wider text-left text-white uppercase"> <%= attr.gsub("_id", "") %> </th>
  <% end %>
  <th scope="col" class="py-3 px-6 text-sm font-medium tracking-wider text-center text-white uppercase">
    <%= "Options" %>
  </th>
  </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
  <% @users.each do |user| %>
    <%= render user %>

  <% end %>
</tbody>
</table>
</div>
</div>
</div>
</div>
</div>
